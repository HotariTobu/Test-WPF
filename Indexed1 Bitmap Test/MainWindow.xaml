<Window x:Class="Indexed1_Bitmap_Test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Indexed1_Bitmap_Test"
        xmlns:cc="clr-namespace:WPFCustomControls;assembly=WPFCustomControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <cc:ScalableScrollViewer>
            <Grid>
                <Image Source="b.png" Visibility="Visible"
                       Loaded="Image_Loaded"
                       MouseUp="Image_MouseUp"/>
                <Image x:Name="MaskImage"
                               Opacity="0.5"
                               IsHitTestVisible="False"/>
            </Grid>
        </cc:ScalableScrollViewer>
    </Grid>
</Window>
